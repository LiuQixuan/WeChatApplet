/* pages/video/video.wxss */

#viewPageTextview{
	display: none;
}

/*videoplayer*/

.videoTitle {
  background-color: black;
  width: 100%;
  position: absolute;
  z-index: 9999;
  opacity: 0.5;
}

.title_small{
  color: white;
}

.videoPlayerView{
	width: 100%;

}

.videoArea,#VideoPlayer{
	width: 100vw;
	height: 56.25vw;
}


/*danmuarea*/
.danmu-area{
  background-color: gray;
  width: 100%;
	height: 40px;
}

.danmuInput{
  height: 30px;
  width: 95%;
	display: flex;
	padding:5px 0px 5px 5px;

}


.danmuInput .input-block{
	height: 30px;
	background-color: white;
	
	border-radius: 15px;
	align-items: center;
	vertical-align: middle;
	flex:1;
}

.input-block>input{
	display: block;
	height: 100%;
}
.danmuInput .button-block{
	float: right;
	width: 30px;
	height: 30px;
}

#danmu-button{
	margin-left: 5px;
	width: 30px;
	padding: 0;
	color:white;
	border: solid 1px white;
}